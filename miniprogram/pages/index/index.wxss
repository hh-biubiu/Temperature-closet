.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(188deg, #7C96F0 36%,#E2E2E2 83%);
}

.backgroundImage {
  display: flex;
  flex-direction: column;
 
  /* background-image: url(https://7573-use-22dlb-1300075186.tcb.qcloud.la/timg.jpg?sign=0a77d60eb363595fc2ed74653f3bf5fc&t=1575869375);
  background-size: 100% 100%; */
  height: 100%;
  width: 100%;
  position: relative;
  /* opacity: 0.8; */
}

.weatherContainer {
  color: #000;
  /* color: rgb(193, 208, 235); */
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 40%;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.temperature {
  display: flex;
  height: 150rpx;
  font-size: 100rpx;
  align-items: center;
}

.title {
  font-size: 60rpx;
  margin-top:160rpx ;
}
.city{
  font-size: 40rpx;
  padding-top: 150rpx;
}
.weather {
  font-size: 45rpx;
}
.range{
  display: flex;
  margin-bottom:20rpx;
}
.range view{
  display: flex;
  align-items: center;
  margin-right:20rpx;
 font-size: 40rpx;
}
.range .label{
  writing-mode: vertical-lr;
 
}
.weatherText {
  width: 650rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  text-indent: 32rpx;
}
.suit-wrap{
  top: 50%;
  position: absolute;
  height: 50%;
  width: 100%;
  overflow-y: auto;
}
.suit-title{
  text-indent: 2em;
  font-size: 40rpx;
  margin-bottom:20rpx ;
  color: #fff;
  height: 60rpx;
}
.suitContainer {
  
  display: flex;
  flex-direction: row;
 height: 264rpx;
  justify-content: center;
  align-items: center;
}

.suitImageContainer {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  margin: 1%;
}

.suitContainer image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.no-clothes{
  height: 240rpx;
  line-height: 240rpx;
  color: rgb(139, 136, 136);
}
.btn{
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  height: 100rpx;
  width: 100rpx;
 
  padding: 0;
  border-radius: 50%;
}
button[size='mini']{
  line-height: 96rpx;
  border: none;
  color: #fff;
  background-color: rgb(81, 133, 153);
}
.tab{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
  border-radius: 20rpx;
  background-color: rgb(193, 205, 245);
}
.tab text{
 width: 50%;
 height: 100%;
 text-align: center;
 border-radius: 20rpx 0 0 20rpx;
 line-height: 80rpx;
}
.tab text:last-of-type{
  border-radius: 0rpx 20rpx 20rpx 0 ;
}
.tab .active{
  background-color: rgb(166, 194, 247);
  color: #f1f0f0;
}
.headline {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  font-weight: bolder;
  color: #4f5050;
  margin: 20px auto 10rpx;
  width: 50%;
}

.headline text {
  width: 150rpx;
  text-align: center;
}

.line {
  width: 60rpx;
  border-top: 1rpx solid #e8e8ec;
  margin: auto 20rpx;
}
.ossionType{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  margin: 10rpx auto;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: aliceblue; 
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
}
.ossionType text{
  flex: 1;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx 0rpx 0 10rpx;
}
.ossionType text:nth-of-type(2){
  border-radius: 0rpx;
}
.ossionType text:last-of-type{
  border-radius: 0rpx 10rpx 10rpx 0 ;
}
.ossionType .active{
  background-color: rgb(166, 194, 247);
  color: #f1f0f0;
}