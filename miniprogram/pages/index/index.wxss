.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(188deg, #7C96F0 36%,#E2E2E2 83%);
}

.backgroundImage {
  display: flex;
  flex-direction: column;
 
  /* background-image: url(https://7573-use-22dlb-1300075186.tcb.qcloud.la/timg.jpg?sign=0a77d60eb363595fc2ed74653f3bf5fc&t=1575869375);
  background-size: 100% 100%; */
  height: 100%;
  width: 100%;
  position: relative;
  /* opacity: 0.8; */
}

.weatherContainer {
  color: #000;
  /* color: rgb(193, 208, 235); */
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 40%;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.temperature {
  display: flex;
  height: 150rpx;
  font-size: 100rpx;
  align-items: center;
}

.title {
  font-size: 60rpx;
  margin-top:160rpx ;
}
.city{
  font-size: 40rpx;
  padding-top: 150rpx;
}
.weather {
  font-size: 45rpx;
}
.range{
  display: flex;
  margin-bottom:20rpx;
}
.range view{
  display: flex;
  align-items: center;
  margin-right:20rpx;
 font-size: 40rpx;
}
.range .label{
  writing-mode: vertical-lr;
 
}
.weatherText {
  width: 650rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  text-indent: 32rpx;
}
.suit-wrap{
  top: 50%;
  position: absolute;
  height: 50%;
  width: 100%;
  overflow-y: auto;
}
.suit-title{
  text-indent: 2em;
  font-size: 40rpx;
  margin-bottom:20rpx ;
  color: #fff;
  height: 60rpx;
}
.suitContainer {
  
  display: flex;
  flex-direction: row;
 height: 264rpx;
  justify-content: center;
  align-items: center;
}

.suitImageContainer {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  margin: 1%;
}

.suitContainer image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.no-clothes{
  height: 240rpx;
  line-height: 240rpx;
  color: #f1f0f0;
}
.btn{
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  height: 100rpx;
  width: 100rpx;
 
  padding: 0;
  border-radius: 50%;
}
button[size='mini']{
  line-height: 96rpx;
  border: none;
  color: #fff;
  background-color: rgb(81, 133, 153);
}